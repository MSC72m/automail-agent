# AutoMail Agent Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (default: 0.0.0.0 - binds to all interfaces)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# Enable auto-reload in development (default: true)
RELOAD=true

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Application environment: development, production, testing (default: development) Other Options: development, production, testing
ENVIRONMENT=development

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Application title (default: AutoMail Agent)
APP_TITLE=AutoMail Agent

# Application description (default: Automated Gmail Sender)
APP_DESCRIPTION=Automated Gmail Sender

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log format string (default: %(asctime)s - %(name)s - %(levelname)s - %(message)s)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log date format (default: %Y-%m-%d %H:%M:%S)
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Browser timeout in milliseconds (default: 30000)
BROWSER_TIMEOUT=30000

# Run browser in headless mode (default: false)
HEADLESS=false 